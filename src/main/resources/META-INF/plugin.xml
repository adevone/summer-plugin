<idea-plugin>
    <id>ru.napoleonit.summer-plugin</id>
    <name>Summer framework</name>
    <vendor email="kt@napoleonit.ru" url="http://napoleonit.com">Napoleon IT</vendor>

    <description><![CDATA[
    Summer framework plugin with intentions:
    <br>
    <br>
    on *View* {<br>
        var <b>propertyName ⇦ Alt+Enter there</b>: Type<br>
    }
    <br>
    <br>
    on override val viewStateProxy(vs: *View*) =<br>
        <b>object ⇦ Alt+Enter there</b> : *View* {<br>
        <br>
    }<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <project-components>
        <component>
            <implementation-class>ru.napoleonit.summerPlugin.AddStateToViewProxyIntention</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <className>ru.napoleonit.summerPlugin.AddStateToViewProxyIntention</className>
            <category>Summer intentions</category>
        </intentionAction>
        <intentionAction>
            <className>ru.napoleonit.summerPlugin.AddMissingViewProxyPropertiesIntention</className>
            <category>Summer intentions</category>
        </intentionAction>
        <intentionAction>
            <className>ru.napoleonit.summerPlugin.EventOnlyWhenAttachedIntention</className>
            <category>Summer intentions</category>
        </intentionAction>
        <intentionAction>
            <className>ru.napoleonit.summerPlugin.EventExactlyOnceIntention</className>
            <category>Summer intentions</category>
        </intentionAction>
    </extensions>

    <depends>org.jetbrains.kotlin</depends>

</idea-plugin>